<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue">

    <!--
    <a href="https://www.freepik.com/free-vector/female-student-listening-webinar-online_9175118.htm#query=illustrations&position=16&from_view=keyword&track=sph&uuid=e758a127-dc57-40ea-8fed-1495ac7d6f5a">Image by pch.vector</a> on Freepik
    <a href="https://www.freepik.com/free-vector/attached-files-concept-illustration_11604311.htm#from_view=detail_alsolike">Image by storyset</a> on Freepik
    -->

    <ImageView
        android:id="@+id/logo"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/student_study"
        android:text="Hello World!" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/lato_bold"
        android:gravity="center"
        android:lineSpacingMultiplier="1.3"
        android:text="Students connect with the instructor and use the study material"
        android:textAllCaps="false"
        android:textColor="@color/indigo_blue"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <androidx.cardview.widget.CardView
        android:id="@+id/next_card"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/indigo_blue"
        app:cardCornerRadius="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="23dp"
                android:rotation="180"
                android:src="@drawable/chevron_left"
                app:tint="@color/white" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>