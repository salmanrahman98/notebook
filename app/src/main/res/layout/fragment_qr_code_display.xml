<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.QrCodeDisplayFrag">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/lato_bold"
        android:paddingHorizontal="20dp"
        android:text="@string/your_qr_code"
        android:textColor="@color/indigo_blue"
        android:textSize="30sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/header_title_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/header_title"
        android:fontFamily="@font/lato_bold"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:layout_marginHorizontal="20dp"
        android:text="Please ask your students to scan this QR code to connect with you and use your files"
        android:textColor="@color/indigo_blue"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/qrImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:clipToOutline="true"
        android:scaleType="centerCrop" />

</RelativeLayout>